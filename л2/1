using System;

// Из 10-ти введённых чисел определить количество отрицательных

class Minus {
    public static void Main() {
        int count=0;
        for (int i=0; i<10; i++) {
            int n=Convert.ToInt32(Console.ReadLine());
            if (n<0) {
                ++count;
            }
        }
        Console.WriteLine("Количество отрицательных: {0}", count);
    }
}
